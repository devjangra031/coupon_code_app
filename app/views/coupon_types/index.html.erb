<div class="page-header">
  <%= link_to new_coupon_type_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Coupon type
  <% end %>
  <h1>Listing coupon_types</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @coupon_types) do |coupon_type| %>
            <td><%= coupon_type.name %></td>
            <td><%= link_to 'Show', coupon_type %></td>
        <td><%= link_to 'Edit', edit_coupon_type_path(coupon_type) %></td>
        <td><%= link_to 'Destroy', coupon_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
