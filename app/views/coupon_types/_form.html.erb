<%= form_for(@coupon_type, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @coupon_type.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@coupon_type.errors.count, "error") %> prohibited this coupon_type from being saved:</h4>
      <ul>
        <% @coupon_type.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :name, CouponType::VALID_COUPON_TYPES.map{|coupon_type| [coupon_type,coupon_type]},{ prompt: 'Select Applicable CouponType'}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>