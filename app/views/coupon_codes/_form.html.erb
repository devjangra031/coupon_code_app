<%= form_for(@coupon_code, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @coupon_code.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@coupon_code.errors.count, "error") %> prohibited this coupon_code from being saved:</h4>
      <ul>
        <% @coupon_code.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :code, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :code, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :type, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :type, CouponType.find_applicable_coupon_types.map{|ct| [ct,ct]}, {prompt: "Select Applicable CouponTypes"}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :value, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :value, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cashback_value, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :cashback_value, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :start_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :end_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :active, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :active, [true, false], {}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :applicable_outlet_ids, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :applicable_outlet_ids, Outlet.all.map{|outlet| [outlet.name, outlet.id]}, {:include_hidden => false}, class: "form-control", multiple: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :minimum_delivery_amount_after_discount, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :minimum_delivery_amount_after_discount, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :maximum_discount, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :maximum_discount, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>