<div class="page-header">
  <%= link_to new_outlet_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Outlet
  <% end %>
  <h1>Listing outlets</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @outlets) do |outlet| %>
            <td><%= outlet.name %></td>
            <td><%= link_to 'Show', outlet %></td>
        <td><%= link_to 'Edit', edit_outlet_path(outlet) %></td>
        <td><%= link_to 'Destroy', outlet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
