<div class="page-header">
  <%= link_to new_product_path, class: 'btn' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Product
  <% end %>
  <%= link_to coupon_types_path, class: 'btn' do %>
    Coupon Types
  <% end %>
  <%= link_to coupon_codes_path, class: 'btn' do %>
    Coupon Codes
  <% end %>
  <%= link_to outlets_path, class: 'btn' do %>
    Outlets
  <% end %>
  <h1>Listing products</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Unit cost</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.unit_cost %></td>
          <td><%= button_to "Add to Cart", add_to_cart_path(:product_id => product), :method => :post %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
